/* pages/pubnishment/pubnishment.wxss */
.showContent{
  border: 1px solid #aaa;
  border-radius: 5px;
  width:260px;
  height: 160px;
  font-size: 16px;
  text-align: center;
  padding-left:5px;
  line-height: 160px;  /* 垂直剧终 */
  box-shadow: 0px 0px 50px 0px #abcdef  inset
}

.showContent span{
  display: inline-block;
  line-height: 20px;
  vertical-align: middle;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.setting{
  display: flex;
  justify-content: flex-end;
  width: 80%;
  margin-top: 35px;
}

.usermotto {
  margin-top: 50px;
}