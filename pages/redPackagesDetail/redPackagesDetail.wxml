<!--pages/redPackagesDetail/redPackagesDetail.wxml-->
<view class="table">
  <view class="tr bg-w">
    <view class="th">姓名</view>
    <view class="th">金额</view>
    <view class="th ">时间</view>
  </view>
  <block wx:for="{{details}}" wx:key="index">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.userName}}</view>
      <view class="td">{{item.money}}</view>
      <view class="td">{{item.updatedAt}}</view>
    </view>
    <view class="tr" wx:else>
       <view class="td">{{item.userName}}</view>
      <view class="td">{{item.money}}</view>
      <view class="td">{{item.updatedAt}}</view>
    </view>
  </block>
</view>

